@model HomeProject.Models.AllEmployeeWorkFamily


<div>
    <div>
        <table class="table table-hover">
            <thead>
            <tr colspan="4">
                <div class="row">
                    @Html.ActionLink("Новая запись", "InsertFamily", "Famely", null, new { @class = "btn btn-success", @style = "background-color: #8dc63f" })

                </div>
            </tr>
            <tr>
                <th>Члены семьи</th>
                <th>Год рождения</th>
                <th></th>

            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Families)
                {

                    <tr>
                        <td>@Html.DisplayFor(Modelitem => item.Description)</td>
                        <td>@Html.DisplayFor(Modelitem => item.Yearbirth)</td>
                        <td>
                            @Html.ActionLink("редактировать", "EditFamily",
                                "Famely", new { id = item.Id }, new { @style = "color: green" }) |
                            @Html.ActionLink("удалить", "DeleteFamily",
                                "Famely", new { item.Id }, new {@style = "color: red" })

                        </td>
                </tr>
            }
            </tbody>
        </table>

    </div>

</div>